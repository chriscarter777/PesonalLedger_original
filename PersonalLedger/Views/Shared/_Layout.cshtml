<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" href="~/Content/images/favicon.ico">
        <title>@ViewBag.Title</title>
        @Styles.Render("~/Content/styles/css")
    </head>

    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("PersonalLedger", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Accounts", "Accounts", "Accounts")</li>
                        <li>@Html.ActionLink("Categories", "Categories", "Categories")</li>
                        <li>@Html.ActionLink("Payees", "Payees", "Payees")</li>
                        <li>@Html.ActionLink("Reports", "Reports", "Reports")</li>
                        <li>@Html.ActionLink("Transactions", "Transactions", "Transactions")</li>
                        <li>@Html.ActionLink("Ledger", "Ledger", "Ledger")</li>
                        <li>@Html.ActionLink("Admin", "Admin", "Admin")</li>
                        <li>@Html.ActionLink("Test", "TestMethod", "Test")</li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container-fluid body-content">
            @RenderBody()
            <footer class="navbar-fixed-bottom">
                <a href="http://cscarter.net" target="_blank">&copy; @DateTime.Now.Year - Christopher Carter</a>
            </footer>
        </div>

        @*Load jQuery before Bootstrap.
        If using Modernizr's HTML5 Shiv, it must be moved to the <head>, right after Styles.Render*@
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryui", "~/bundles/jqueryval", "~/bundles/bootstrap")
        @Scripts.Render("~/bundles/react")
        @RenderSection("scripts", required: false)
    </body>
</html>
